<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="${application.persistenceUnitName}"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>

    <bean id="jpaConnector" class="org.oztrack.data.connector.JpaConnector">
        <constructor-arg ref="entityManagerFactory"/>
    </bean>



    <bean id="applicationContext" class="org.oztrack.app.OzTrackConfigurationImpl">
        <property name="applicationTitle" value="${application.title}"/>
        <property name="applicationEmail" value="${application.email}"/>
        <property name="smtpServer" value="${application.emailServer}"/>
        <property name="version" value="${application.version}.${revision}"/>
        <property name="uriPrefix" value="${application.uri.prefix}"/>
        <property name="daoManager" ref="daoManager"/>
        <property name="authenticationManager" ref="authenticationManager"/>
        <property name="dataDir" value="${application.dataDir}"/>
        <property name="dataSpaceURL" value="${dataSpaceURL}"/>
        <property name="dataSpaceUsername" value="${dataSpaceUsername}"/>
        <property name="dataSpacePassword" value="${dataSpacePassword}"/>
        <property name="serverProxyName" value="${serverProxyName}"/>
    </bean>

    <bean id="ozTrackApplication" class="org.oztrack.app.OzTrackApplication">
        <property name="applicationContext" ref="applicationContext"/>
    </bean>

    <bean id="daoManager" class="org.oztrack.data.access.manager.impl.DaoManagerImpl">
        <property name="acousticDetectionDao" ref="acousticDetectionDao"/>
        <property name="positionFixDao" ref="positionFixDao"/>
        <property name="animalDao" ref="animalDao"/>
        <property name="userDao" ref="userDao"/>
        <property name="projectDao" ref="projectDao"/>
        <property name="dataFileDao" ref="dataFileDao"/>
        <property name="rawAcousticDetectionDao" ref="rawAcousticDetectionDao"/>
        <property name="receiverDeploymentDao" ref="receiverDeploymentDao"/>
        <property name="jpaConnector" ref="jpaConnector"/>
        <property name="jdbcAccess" ref="jdbcAccess"/>
        <property name="jdbcQuery" ref="jdbcQuery"/>
        <property name="sightingDao" ref="sightingDao"/>
    </bean>

    <bean id="authenticationManager" class="org.oztrack.app.AuthenticationManager">
    </bean>

    <!-- the DataSource (parameterized for configuration via a PropertyPlaceHolderConfigurer) -->
    <bean id="dataSource" destroy-method="close" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost/oztrack"/>
        <property name="username" value="oztrack"/>
        <property name="password" value="ozadmin"/>
    </bean>

    <bean id="jdbcAccess" class="org.oztrack.data.access.impl.direct.JdbcAccessImpl">
         <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="jdbcQuery" class="org.oztrack.data.access.impl.direct.JdbcQueryImpl">
         <property name="dataSource" ref="dataSource" />
    </bean>

    
</beans>